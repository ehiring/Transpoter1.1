            }
        }

        function showErrorMessages() {
            setErrorMessages()
            showError = true;
            var errorContainer = $('<div class="toolTip username">' + usernameError + '</div>');
            inputUsername.after(errorContainer);
            $('input[name="username"]').css('border-color', 'red');
        }

    });
</script>