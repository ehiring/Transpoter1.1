
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    input:focus,
    textarea:focus {
        border: 0;
        outline: 0;
    }

    .clear {
        clear: both;
    }

    .pageTitle {
        margin-bottom: 0.5em;
        font-size: 2em;
        font-weight: 700;
        line-height: 1em;
        color: #00AA72;
    }

    .roundedCorners {
        border-radius: 3px;
    }

    .boxFlatShadow {
        box-shadow: 0 5px 0 0 rgba(0, 0, 0, 0.25);
    }

    .animation {
        -webkit-transition: all 0.2s linear;
        -moz-transition: all 0.2s linear;
        -ms-transition: all 0.2s linear;
        -o-transition: all 0.2s linear;
        transition: all 0.2s linear;
    }

    .wrapper {
        width: 560px;
        padding: 20px;
        margin: 20px auto;
        background: #fff;
    }

    .formItem {
        position: relative;
        display: block;
        margin: 1em 0;
    }

        .formItem label {
            float: left;
            width: 120px;
        }

        .formItem input[type="text"],
        .formItem input[type="password"] {
            float: left;
            width: 400px;
            height: 25px;
            padding: 0 2%;
            line-height: 25px;
            background: #eee;
            border: 0;
            border-bottom: solid 2px #eee;
        }

            .formItem input[type="text"]:focus,
            .formItem input[type="password"]:focus {
                border-bottom: solid 2px #00AA72
            }

    .btnSend {
        display: inline-block;
        height: 25px;
        padding: 0 2%;
        line-height: 25px;
        color: #fff;
        background: #00AA72;
        border: 0;
        cursor: pointer;
    }

        .btnSend:hover {
            background: #006E4A;
        }

    .toolTip {
        position: absolute;
        display: inline-block;
        left: 120px;
        top: -25px;
        height: 25px;
        padding: 0 10px;
        color: #fff;
        background: #f00;
        opacity: 0;
        z-index: 100;
    }

    toolTip:after {
        content: '';
        position: absolute;
        width: 10px;
        height: 10px;
        background: blue;
        z-index: 101;
    }

</style>
<h2>Test</h2>

<div class="wrapper roundedCorners boxFlatShadow">
    <div class="intro">
        <h1 class="pageTitle">Form validation</h1>
        <p>A login form with build-in validation with css3 tooltips.</p>
    </div>

    <form>
        <div class="formItem">
            <label>Username: </label>
            <input type="text" name="username" class="userName animation" />
            <div class="clear"></div>
        </div>
        <div class="formItem">
            <label>Password: </label>
            <input type="password" name="password" class="animation" />
            <div class="clear"></div>
        </div>
        <input type="submit" name="submit" value="Send" class="btnSend roundedCorners" />
    </form>
</div>

